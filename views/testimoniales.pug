extends ./layout/index
block contenido
  main.container.mt-5
    h1.text-center.mt-5 #{pagina} 
    //- p= JSON.stringify(testimoniales)
    //- include ./layout/bloque_testimoniales.pug
    include ./layout/bloque_testimoniales.pug
    .row
      h2.d-block.w-100.text-center Agrega un testimonial
      .row.justify-content-center.col
        .col-md-8 
          form(action="/testimoniales" method="POST")
            .form-group
              label(for="nombre") Nombre 
              input#nombre(type="text", placeholder="Nombre", name="nombre", class="form-control", value=nombre)
            .form-group
              label(for="correo") Correo 
              input#correo(type="text", placeholder="Correo", name="correo", class="form-control", value=correo)
            .form-group
              label(for="mensaje") Mensaje
              textarea#mensaje(placeholder="Mensaje", name="mensaje", rows="3", class="form-control")= mensaje
            input.btn.btn-success.btn-block(type="submit")
        //- p= JSON.stringify(errores)
        .col-md-12.mt-3
          if(errores)
            each error in errores 
              .col.alert.alert-danger.col.text-center= error.mensaje